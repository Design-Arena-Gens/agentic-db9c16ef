# OpenAI API for Whisper transcription and GPT caption generation
OPENAI_API_KEY=sk-...

# YouTube Data API v3
YOUTUBE_CLIENT_ID=...apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=...
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback
YOUTUBE_REFRESH_TOKEN=...

# Optional: Google Cloud for Storage & Speech-to-Text (alternative to Whisper)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET_NAME=podcast-clips

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/podcast_clips

# Server configuration
NODE_ENV=production
UPLOAD_DIR=/tmp/uploads
OUTPUT_DIR=/tmp/outputs

# Scheduling (times in HH:MM format, 24-hour)
SCHEDULE_TIME_1=13:00
SCHEDULE_TIME_2=21:00
TIMEZONE=America/New_York

# Optional: Vercel deployment
VERCEL_TOKEN=...
